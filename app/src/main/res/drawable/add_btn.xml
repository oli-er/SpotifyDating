<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_focused="true"
        android:state_pressed="true"
        android:drawable="@drawable/closed_add_btn"/>

    <item
        android:state_focused="false"
        android:state_pressed="true"
        android:drawable="@drawable/closed_add_btn">
    </item>

    <item>
        <shape android:shape="oval">
            <stroke
                android:width="3dp"
                android:color="@color/btn_add_green" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>
